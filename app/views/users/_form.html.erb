<div class="my-16">
  <%= form_with(model: user, class: "rounded-lg drop-shadow-xl p-2.5 flex border border-gray-300") do |form| %>
    <%= form.email_field :email,
                     placeholder: "Your e-mail",
                     required: true,
                     class:
                       "dark:bg-slate-900 border-none focus:outline-none p-2.5 flex-1 flex-shrink-0 text-lg w-full" %>

    <%= form.submit "Try now",
                class:
                  "cursor-pointer px-5 py-2.5 rounded-md bg-[#24292F] hover:bg-[#24292F]/90 dark:hover:bg-[#050708]/30 text-white" %>
  <% end %>
</div>

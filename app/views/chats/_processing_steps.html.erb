<div id="processing_steps_<%= chat.id %>"
     class="mb-4 rounded-xl bg-slate-50 dark:bg-neutral-800 border border-slate-200 dark:border-neutral-700 p-4"
     data-controller="processing-steps"
     role="status"
     aria-live="polite">

  <div class="flex items-center justify-between gap-4">

    <!-- Étape 1: Recherche du contexte -->
    <div class="flex items-center gap-2 flex-1" data-processing-steps-target="step" data-step="search">
      <div class="step-indicator h-6 w-6 rounded-full flex items-center justify-center transition-all <%= current_step == 'search' && status == 'active' ? 'bg-blue-500 animate-pulse' : current_step == 'search' && status == 'done' ? 'bg-green-500' : 'bg-slate-300 dark:bg-neutral-600' %>">
        <% if current_step == 'search' && status == 'active' %>
          <svg class="h-4 w-4 text-white animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        <% elsif current_step == 'search' && status == 'done' %>
          <svg class="h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        <% end %>
      </div>
      <span class="step-text text-sm font-medium transition-all <%= (current_step == 'search' && %w[active done].include?(status)) ? 'text-slate-900 dark:text-white' : 'text-slate-500 dark:text-neutral-400' %>">
        Recherche du contexte
      </span>
    </div>

    <!-- Séparateur -->
    <div class="h-px w-4 bg-slate-300 dark:bg-neutral-600"></div>

    <!-- Étape 2: Vérification de la pertinence -->
    <div class="flex items-center gap-2 flex-1" data-processing-steps-target="step" data-step="relevance">
      <div class="step-indicator h-6 w-6 rounded-full flex items-center justify-center transition-all <%= current_step == 'relevance' && status == 'active' ? 'bg-blue-500 animate-pulse' : current_step == 'relevance' && status == 'done' ? 'bg-green-500' : current_step == 'relevance' && status == 'failed' ? 'bg-orange-500' : 'bg-slate-300 dark:bg-neutral-600' %>">
        <% if current_step == 'relevance' && status == 'active' %>
          <svg class="h-4 w-4 text-white animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        <% elsif current_step == 'relevance' && %w[done failed].include?(status) %>
          <svg class="h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        <% end %>
      </div>
      <span class="step-text text-sm font-medium transition-all <%= (current_step == 'relevance' && %w[active done failed].include?(status)) ? 'text-slate-900 dark:text-white' : 'text-slate-500 dark:text-neutral-400' %>">
        Vérification de la pertinence
      </span>
    </div>

    <!-- Séparateur -->
    <div class="h-px w-4 bg-slate-300 dark:bg-neutral-600"></div>

    <!-- Étape 3: Génération de la réponse -->
    <div class="flex items-center gap-2 flex-1" data-processing-steps-target="step" data-step="generate">
      <div class="step-indicator h-6 w-6 rounded-full flex items-center justify-center transition-all <%= current_step == 'generate' && status == 'active' ? 'bg-blue-500 animate-pulse' : current_step == 'generate' && status == 'done' ? 'bg-green-500' : 'bg-slate-300 dark:bg-neutral-600' %>">
        <% if current_step == 'generate' && status == 'active' %>
          <svg class="h-4 w-4 text-white animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        <% elsif current_step == 'generate' && status == 'done' %>
          <svg class="h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
          </svg>
        <% end %>
      </div>
      <span class="step-text text-sm font-medium transition-all <%= (current_step == 'generate' && %w[active done].include?(status)) ? 'text-slate-900 dark:text-white' : 'text-slate-500 dark:text-neutral-400' %>">
        Génération de la réponse
      </span>
    </div>

  </div>
</div>

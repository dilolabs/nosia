<% if Current.user %>
  <!-- Medietilsynet-style Sidebar -->
  <div class="w-full max-w-max overflow-y-auto overflow-x-hidden hidden lg:block border-r border-neutral-200 bg-white dark:bg-neutral-900 dark:border-neutral-700 p-4" data-controller="reveal" data-reveal-hidden-class="hidden">
    <!-- Toggle Button -->
    <button data-action="reveal#toggle" type="button" class="mb-4 p-2 rounded-sm hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors">
      <%= inline_svg "svg/menu.svg", title: "Toggle Menu", alt: "Toggle Menu", class: "w-6 h-6 text-medietilsynet-text-primary dark:text-white" %>
      <span class="sr-only">Toggle menu</span>
    </button>
    
    <!-- Sidebar Navigation Items -->
    <nav class="space-y-2 w-max">
      <%= link_to root_path, title: "Hjem", class: "flex items-center gap-3 px-4 py-3 rounded-sm text-medietilsynet-text-primary dark:text-white hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors font-sans text-base" do %>
        <%= inline_svg "svg/home.svg", title: "Home", alt: "Home", class: "w-5 h-5" %>
        <span data-reveal-target="item" class="hidden">Hjem</span>
      <% end %>
      
      <%= link_to accounts_path, title: "Kontoer", class: "flex items-center gap-3 px-4 py-3 rounded-sm text-medietilsynet-text-primary dark:text-white hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors font-sans text-base" do %>
        <%= inline_svg "svg/folders.svg", title: "Accounts", alt: "Accounts", class: "w-5 h-5" %>
        <span data-reveal-target="item" class="hidden">Kontoer</span>
      <% end %>
      
      <%= link_to sources_path, title: "Kilder", class: "flex items-center gap-3 px-4 py-3 rounded-sm text-medietilsynet-text-primary dark:text-white hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors font-sans text-base" do %>
        <%= inline_svg "svg/file-search.svg", title: "Sources", alt: "Sources", class: "w-5 h-5" %>
        <span data-reveal-target="item" class="hidden">Kilder</span>
      <% end %>
    </nav>
  </div>

  <div class="lg:hidden fixed z-50 w-full h-16 max-w-sm -translate-x-1/2 n-main-bg border n-main-border rounded-full bottom-2 left-1/2">
    <div class="grid h-full max-w-lg grid-cols-5 mx-auto">
      <%= link_to root_path, title: "Home", alt: "Home page", class: "n-nav-bottom n-main-hover rounded-s-full" do %>
        <%= inline_svg "svg/home.svg", title: "Home", alt: "Home",class: "w-6 h-6" %>
      <% end %>
      <%= link_to accounts_path, title: "Accounts", alt: "Accounts", class: "n-nav-bottom n-main-hover" do %>
        <%= inline_svg "svg/folders.svg", title: "Accounts", alt: "Folders", class: "w-6 h-6" %>
      <% end %>
      <%= link_to new_chat_path, title: "New chat", alt:"New chat", class: "n-nav-bottom rounded-full" do %>
        <%= inline_svg "svg/chats.svg", title: "New chat", alt: "Chats", class: "p-2 h-14 w-14 text-black bg-neutral-100 rounded-full hover:bg-green-200 dark:hover:bg-green-700 focus:ring-4 focus:ring-neutral-300 focus:outline-none dark:focus:ring-neutral-200" %>
      <% end %>
      <%= link_to sources_path, title: "Sources", alt: "Sources", class: "n-nav-bottom n-main-hover" do %>
        <%= inline_svg "svg/file-search.svg", title: "Sources", alt: "File-search", class: "w-6 h-6" %>
      <% end %>
      <%= link_to settings_path, title: "Settings", alt:"Seetings", class: "n-nav-bottom n-main-hover rounded-e-full" do %>
        <%= inline_svg "svg/cog.svg", title: "Settings", alt:"Cog", class: "w-6 h-6" %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="n-title-container md:flex md:justify-between md:items-center">
  <h2 class="n-main-title">Q&A #<%= @qna.id %></h2>
  <div class="flex gap-4">
    <%= link_to edit_sources_qna_path(@qna), class: "n-btn-primary" do %>
      <%= inline_svg "svg/edit.svg", title:"Edit", alt:"Pencil", class: "mx-auto w-6 h-6" %>
      <span class="sr-only">Edit qna</span>
    <% end %>
    <%= link_to sources_qna_path(@qna), data: { turbo_method: :delete, turbo_confirm: "Are you sure?",}, class: "n-btn-danger" do %>
      <%= inline_svg "svg/trash-bin.svg", title:"Delete", alt:"Trash bin", class: "text-red-600 dark:text-red-300 mx-auto w-6 h-6" %>
      <span class="sr-only">Delete qna</span>
    <% end %>
  </div>
</div>
<div class="n-form-container">
  <h2 class="n-form-title">
    <%= @qna.question %>
  </h2>
  <p class="n-form-content">
    <%= @qna.answer %>
  </p>
</div>

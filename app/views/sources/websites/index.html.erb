<div class="n-title-container flex justify-between items-center">
  <h2 class="n-main-title">Websites</h2>
  <%= link_to "Add website", new_sources_website_path, class: "n-btn-primary" %>
</div>
<ul class="n-cards-grid list-none">
  <% @websites.each do |website| %>
    <li class="n-card n-main-border lg:col-span-2 ">
      <div class="m-6 space-y-2">
        <div class="flex items-center justify-between">
          <p class="n-card-subtitle"><%= website.account&.name %></p>
          <div class="flex items-center gap-4">
            <%= link_to edit_sources_website_path(website), title:"Edit website", class: "n-btn-icon n-main-hover n-main-focus" do %>
              <%= inline_svg "svg/edit.svg", title:"Edit", alt:"Pencil", class: "mx-auto w-6 h-6" %>
              <span class="sr-only">Show website</span>
            <% end %>
            <%= link_to sources_website_path(website), title:"Delete website", data: { turbo_method: :delete, turbo_confirm: "Are you sure?", }, class: "text-red-600 dark:text-red-300 n-btn-icon n-main-hover-danger n-main-focus-danger" do %>
              <%= inline_svg "svg/trash-bin.svg", title:"Delete", alt:"Trash bin", class: "mx-auto w-6 h-6" %>
              <span class="sr-only">Delete website</span>
            <% end %>
          </div>
        </div>
        <h5 class="n-card-title"><%= website.url %></h5>
      </div>
    </li>
  <% end %>
</ul>

<div class="n-title-container flex justify-between items-center">
  <h2 class="n-main-title">Texts</h2>
  <%= link_to "Add text", new_sources_text_path, class: "n-btn-primary" %>
</div>
<ul class="n-cards-grid list-none">
  <% @texts.each do |text| %>
    <li class="n-card n-main-border lg:col-span-2 ">
      <div class="m-6 space-y-2">
        <div class="flex items-center justify-between">
          <p class="n-card-subtitle"><%= text.account&.name %></p>
          <div class="flex items-center gap-4">
            <%= link_to sources_text_path(text), title:"Show text", class: "n-btn-icon n-main-hover n-main-focus" do %>
              <%= inline_svg "svg/eye.svg", title:"Show", alt:"Eye", class: "mx-auto w-6 h-6" %>
              <span class="sr-only">Show text</span>
            <% end %>
            <%= link_to sources_text_path(text), title:"Delete text", data: { turbo_method: :delete, turbo_confirm: "Are you sure?", }, class: "text-red-600 dark:text-red-300 n-btn-icon n-main-hover-danger n-main-focus-danger" do %>
              <%= inline_svg "svg/trash-bin.svg", title:"Delete", alt:"Trash bin", class: "mx-auto w-6 h-6" %>
              <span class="sr-only">Delete text</span>
            <% end %>
          </div>
        </div>
        <div class="text-wrap">
          <%= text.data.first(200) %><%= "..." if text.data.length > 200 %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

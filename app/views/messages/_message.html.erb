<div data-controller="new-message-event-dispatcher" id="<%= dom_id(message, :messages) %>" style="order: <%= message.response_number + 1 %>">
  <% if message.user? %>
    <div class="flex flex-row py-4">
      <div class="text-xl font-bold">
        <%= sanitize message.content, attributes: %w[style] %>
      </div>
    </div>
  <% else %>
    <div id="accordion-message-<%= message.id %>" data-accordion="open" data-active-classes="text-gray-900 dark:text-white" data-inactive-classes="text-gray-500 dark:text-gray-400">
        <h2 id="accordion-message-<%= message.id %>-heading-1">
          <button type="button" class="flex items-center justify-between w-full py-2 font-medium rtl:text-right text-gray-500 dark:text-gray-400 gap-3" data-accordion-target="#accordion-message-<%= message.id %>-body-1" aria-expanded="true" aria-controls="accordion-message-<%= message.id %>-body-1">
            <span>Search</span>
            <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
            </svg>
          </button>
        </h2>
        <div id="accordion-message-<%= message.id %>-body-1" class="hidden" aria-labelledby="accordion-message-<%= message.id %>-heading-1">
          <div class="py-2">
            <%= tag.div id: dom_id(message, :search_content) do %>
              <%= render "messages/search_content", message: %>
            <% end %>
          </div>
        </div>
        <h2 id="accordion-message-<%= message.id %>-heading-2">
          <button type="button" class="flex items-center justify-between w-full py-2 font-medium rtl:text-right text-gray-500 dark:text-gray-400 gap-3" data-accordion-target="#accordion-message-<%= message.id %>-body-2" aria-expanded="<%= message.content.present? ? false : true %>" aria-controls="accordion-message-<%= message.id %>-body-2">
            <span>Reasoning</span>
            <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
            </svg>
          </button>
        </h2>
        <div id="accordion-message-<%= message.id %>-body-2" class="hidden" aria-labelledby="accordion-message-<%= message.id %>-heading-2">
          <div class="py-2">
            <%= tag.div id: dom_id(message, :reasoning_content) do %>
              <%= render "messages/reasoning_content", message: %>
            <% end %>
          </div>
        </div>
        <h2 id="accordion-message-<%= message.id %>-heading-3">
          <button type="button" class="flex items-center justify-between w-full py-2 font-medium rtl:text-right text-gray-500 dark:text-gray-400 gap-3" data-accordion-target="#accordion-message-<%= message.id %>-body-3" aria-expanded="true" aria-controls="accordion-message-<%= message.id %>-body-3">
            <span>Response</span>
            <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
            </svg>
          </button>
        </h2>
        <div id="accordion-message-<%= message.id %>-body-3" class="hidden" aria-labelledby="accordion-message-<%= message.id %>-heading-3">
          <div class="py-2">
            <%= tag.div id: dom_id(message, :content) do %>
              <%= render "messages/content", message: %>
            <% end %>
          </div>
        </div>
    </div>
  <% end %>
</div>

<div class="n-title-container md:flex md:justify-between md:items-center">
  <h2 class="n-main-title">Accounts</h2>
  <%= link_to "Add account", new_account_path, class: "n-btn-primary hidden md:inline-flex " %>
</div>

<ul class="n-cards-grid !list-none">
  <% @accounts.each do |account| %>
    <li class="relative n-card border n-main-border xl:col-span-2">
      <div class="h-32 pt-6 text-center n-main-hover">
        <h5 class="n-card-title"><%= account.name %></h5>
      </div>
      <div class="absolute w-full bottom-0 px-2 pb-2 grid grid-cols-2 gap-2 ">
        <%= link_to edit_account_path(account), class: "bg-white dark:bg-neutral-900 n-btn n-main-hover n-main-focus border n-main-border" do %>
          <p>Rename</p>
        <% end %>
        <%= link_to account_settings_path(account), class: "bg-white dark:bg-neutral-900 n-btn n-main-hover n-main-focus border n-main-border" do %>
          <p>Settings</p>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>

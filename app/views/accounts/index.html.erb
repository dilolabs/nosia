<div class="n-title-container">
  <h2 class="n-main-title">Accounts</h2>
</div>

<div class="n-cards-grid">
  <% @accounts.each do |account| %>
    <%= link_to edit_account_path(account), class: "n-card n-main-focus place-content-center n-main-border n-main-hover h-48 xl:col-span-2" do %>
      <h5 class="n-card-title"><%= account.name %></h5>
      <p class="n-card-subtitle"><%= account.uid %></p>
    <% end %>
  <% end %>
</div>

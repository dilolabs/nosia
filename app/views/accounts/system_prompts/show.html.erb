<% content_for :navbar do %>
  <li class="flex items-center">
    <%= link_to "Accounts", accounts_path, class:"n-ariane n-main-focus" %>
  </li>
  <li class="flex items-center">
    <%= inline_svg_tag "svg/chevron-right.svg", class: "shrink-0 h-5 w-5" %>
    <%= link_to @account.name, "#", class:"n-ariane n-main-focus" %>
  </li>
  <li class="flex items-center">
    <%= inline_svg_tag "svg/chevron-right.svg", class: "shrink-0 h-5 w-5" %>
    <%= link_to "Settings", account_system_prompt_path(@account), class:"n-ariane n-main-focus" %>
  </li>
<% end %>

<div class="n-title-container md:flex md:justify-between md:items-center">
  <h2 class="n-main-title mt-0.5"><%= @account.name %> settings</h2>
</div>

<div class="border-b border-neutral-200 dark:border-neutral-700">
  <nav class="-mb-px grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-5 xl:grid-cols-7 gap-x-8 gap-y-2">
    <%= link_to account_account_users_path(@account), class: "n-tab n-main-focus rounded-t-lg" do %>
      <p>Users</p>
    <% end %>
    <%= link_to account_system_prompt_path(@account), class: "n-tab-active n-main-focus rounded-t-lg" do %>
      <p>System Prompt</p>
    <% end %>
  </nav>
</div>

<div class="pb-1 pt-4 flex-1 overflow-y-auto space-y-2">
  <div class="flex justify-center">
    <%= link_to "Edit", edit_account_system_prompt_path(@account), class: "n-btn-primary" %>
  </div>
  <div class="max-w-4xl mx-auto n-card n-main-border px-5 py-3">
    <div class="text-[15px] leading-relaxed text-wrap">
      <%= simple_format @system_prompt.content %>
    </div>
  </div>
  <div class="flex justify-center">
    <%= link_to "Edit", edit_account_system_prompt_path(@account), class: "n-btn-primary" %>
  </div>
</div>

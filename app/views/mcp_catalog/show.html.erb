<div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <%= link_to mcp_catalog_index_path, class: "inline-flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100" do %>
      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Retour au catalogue
    <% end %>
  </div>

  <div class="rounded-xl border border-gray-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 shadow-sm">
    <div class="border-b border-gray-200 dark:border-neutral-700 px-6 py-4">
      <div class="flex items-start gap-4">
        <span class="text-5xl"><%= @template[:icon] %></span>
        <div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @template[:name] %></h1>
          <p class="mt-1 text-sm text-gray-600 dark:text-gray-400"><%= @template[:description] %></p>
        </div>
      </div>
    </div>

    <%= form_with url: mcp_catalog_index_path, method: :post, class: "p-6" do |form| %>
      <%= hidden_field_tag :id, @template[:id] %>
      <div class="space-y-6">
        <% if @template[:requires_config]&.any? %>
          <div class="rounded-lg bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800 dark:text-blue-200">Configuration requise</h3>
                <div class="mt-2 text-sm text-blue-700 dark:text-blue-300">
                  <p>Ce serveur nécessite une configuration avant activation.</p>
                </div>
              </div>
            </div>
          </div>

          <% @template[:requires_config].each do |config_field| %>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                <%= config_field[:label] %>
                <% if config_field[:required] %>
                  <span class="text-red-500">*</span>
                <% end %>
              </label>

              <% if config_field[:description] %>
                <p class="mb-2 text-xs text-gray-500 dark:text-gray-400"><%= config_field[:description] %></p>
              <% end %>

              <% case config_field[:type] %>
              <% when "secret", "password" %>
                <%= password_field_tag "config[#{config_field[:name]}]", "",
                  required: config_field[:required],
                  placeholder: config_field[:placeholder],
                  class: "block w-full rounded-lg border border-gray-300 dark:border-neutral-600 bg-white dark:bg-neutral-700 px-4 py-2 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-500/20" %>

              <% when "path" %>
                <%= text_field_tag "config[#{config_field[:name]}]", "",
                  required: config_field[:required],
                  placeholder: config_field[:placeholder] || "/path/to/directory",
                  class: "block w-full rounded-lg border border-gray-300 dark:border-neutral-600 bg-white dark:bg-neutral-700 px-4 py-2 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-500/20" %>

              <% when "select" %>
                <%= select_tag "config[#{config_field[:name]}]",
                  options_for_select(config_field[:options] || []),
                  required: config_field[:required],
                  class: "block w-full rounded-lg border border-gray-300 dark:border-neutral-600 bg-white dark:bg-neutral-700 px-4 py-2 text-gray-900 dark:text-white focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-500/20" %>

              <% when "textarea" %>
                <%= text_area_tag "config[#{config_field[:name]}]", "",
                  required: config_field[:required],
                  placeholder: config_field[:placeholder],
                  rows: 3,
                  class: "block w-full rounded-lg border border-gray-300 dark:border-neutral-600 bg-white dark:bg-neutral-700 px-4 py-2 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-500/20" %>

              <% else %>
                <%= text_field_tag "config[#{config_field[:name]}]", "",
                  required: config_field[:required],
                  placeholder: config_field[:placeholder],
                  class: "block w-full rounded-lg border border-gray-300 dark:border-neutral-600 bg-white dark:bg-neutral-700 px-4 py-2 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-500/20" %>
              <% end %>

              <% if config_field[:help_text] %>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400"><%= config_field[:help_text] %></p>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="rounded-lg bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-green-800 dark:text-green-200">Prêt à activer</h3>
                <div class="mt-2 text-sm text-green-700 dark:text-green-300">
                  <p>Ce serveur ne nécessite aucune configuration supplémentaire.</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% if @template[:capabilities]&.any? %>
          <div>
            <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Capacités disponibles</h3>
            <div class="flex flex-wrap gap-2">
              <% @template[:capabilities].each do |capability| %>
                <span class="inline-flex items-center rounded-lg bg-gray-100 dark:bg-neutral-700 px-3 py-1 text-sm font-medium text-gray-700 dark:text-gray-300">
                  <%= capability %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-8 flex gap-3">
        <%= link_to "Annuler", mcp_catalog_index_path, class: "flex-1 rounded-lg bg-gray-200 dark:bg-neutral-700 hover:bg-gray-300 dark:hover:bg-neutral-600 px-4 py-2.5 text-center text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm transition-colors" %>
        <%= form.submit "Activer #{@template[:name]}", class: "flex-1 rounded-lg bg-green-600 hover:bg-green-700 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Catalogue MCP</h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          Activez des serveurs MCP prédéfinis en un clic
        </p>
      </div>
      <%= link_to mcp_servers_path, class: "inline-flex items-center gap-2 rounded-lg bg-gray-200 dark:bg-neutral-700 hover:bg-gray-300 dark:hover:bg-neutral-600 px-4 py-2 text-sm font-semibold text-gray-900 dark:text-gray-100 shadow-sm transition-colors" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Mes serveurs
      <% end %>
    </div>
  </div>

  <% if @servers_by_category.any? %>
    <div class="space-y-12">
      <% @categories.each do |category| %>
        <% servers = @servers_by_category[category[:id].to_s] %>
        <% next if servers.blank? %>

        <div>
          <div class="mb-6">
            <h2 class="flex items-center gap-2 text-2xl font-bold text-gray-900 dark:text-white">
              <span class="text-3xl"><%= category[:icon] %></span>
              <%= category[:name] %>
            </h2>
            <% if category[:description] %>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-400"><%= category[:description] %></p>
            <% end %>
          </div>

          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <% servers.each do |server| %>
              <% is_activated = @activated_ids.include?(server[:id]) %>

              <div class="relative rounded-xl border <%= is_activated ? 'border-green-500 dark:border-green-600' : 'border-gray-200 dark:border-neutral-700' %> bg-white dark:bg-neutral-800 p-6 shadow-sm hover:shadow-md transition-shadow">

                <% if is_activated %>
                  <div class="absolute top-4 right-4">
                    <span class="inline-flex items-center gap-1 rounded-full bg-green-100 dark:bg-green-900/30 px-2 py-1 text-xs font-medium text-green-800 dark:text-green-400">
                      <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      Activé
                    </span>
                  </div>
                <% end %>

                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0">
                    <span class="text-4xl"><%= server[:icon] %></span>
                  </div>

                  <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                      <%= server[:name] %>
                    </h3>
                    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 line-clamp-3">
                      <%= server[:description] %>
                    </p>

                    <% if server[:capabilities]&.any? %>
                      <div class="mt-3 flex flex-wrap gap-1">
                        <% server[:capabilities].take(3).each do |capability| %>
                          <span class="inline-flex items-center rounded-md bg-gray-100 dark:bg-neutral-700 px-2 py-1 text-xs font-medium text-gray-700 dark:text-gray-300">
                            <%= capability %>
                          </span>
                        <% end %>
                        <% if server[:capabilities].size > 3 %>
                          <span class="inline-flex items-center rounded-md bg-gray-100 dark:bg-neutral-700 px-2 py-1 text-xs font-medium text-gray-700 dark:text-gray-300">
                            +<%= server[:capabilities].size - 3 %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>

                    <div class="mt-4">
                      <% if is_activated %>
                        <button disabled class="w-full rounded-lg bg-gray-200 dark:bg-neutral-700 px-4 py-2 text-sm font-semibold text-gray-500 dark:text-gray-400 cursor-not-allowed">
                          Déjà activé
                        </button>
                      <% elsif server[:requires_config]&.any? %>
                        <%= link_to mcp_catalog_path(server[:id]),
                          class: "block w-full text-center rounded-lg bg-green-600 hover:bg-green-700 px-4 py-2 text-sm font-semibold text-white shadow-sm transition-colors" do %>
                          Configurer et activer
                        <% end %>
                      <% else %>
                        <%= button_to mcp_catalog_index_path,
                          method: :post,
                          params: { id: server[:id] },
                          class: "w-full rounded-lg bg-green-600 hover:bg-green-700 px-4 py-2 text-sm font-semibold text-white shadow-sm transition-colors" do %>
                          Activer
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 dark:text-gray-400">Aucun serveur disponible dans le catalogue</p>
    </div>
  <% end %>
</div>
